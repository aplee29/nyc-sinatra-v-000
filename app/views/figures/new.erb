<h1>Create a New Figure</h1>

<form method="POST" action="/figures">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name"><br>

  <label><h4>Current Landmarks:</h4></label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
  <% end %>

  <label><h4>Create New Landmark:</h4></label>
  <label>Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]"><br>

  <label><h4>Current Titles:</h4></label>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><br>
  <% end %>

  <label><h4>Create New Title:</h4></label>
  <label>Title Name:</label>
  <input type="text" name="title[name]" id="new_title"><br><br>

  <input type="submit" value="Create New Figure">
</form>