<h1>Edit a Figure</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"><br>

  <label><h4>Edit Landmarks:</h4></label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><br>
  <% end %>

  <label><h4>Add New Landmark:</h4></label>
  <label>Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br>
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]"><br>

  <label><h4>Edit Titles:</h4></label>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><br>
  <% end %>

  <label><h4>Add New Title:</h4></label>
  <label>Title Name:</label>
  <input type="text" name="title[name]" id="new_title"><br>

  <input type="submit" value="Edit Figure">
</form>